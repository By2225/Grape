OBJS = parser.cmo scanner.cmo

.PHONY : grape
grape : grape.cmo scanner.ml parser.ml semant.ml ast.ml
	ocamlopt -o grape scanner.ml parser.ml semant.ml ast.ml

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

.PHONY : clean
clean :
	rm -f parser.ml parser.mli scanner.ml *.cmo *.cmi

# GENERATED BY ./scripts/bootstrap.sh
ast.cmo :
ast.cmx :
codegen.cmo : ast.cmo
codegen.cmx : ast.cmx
grape.cmo : semant.cmo scanner.cmo codegen.cmo ast.cmo
grape.cmx : semant.cmx scanner.cmx codegen.cmx ast.cmx
parser.cmo : ast.cmo parser.cmi
parser.cmx : ast.cmx parser.cmi
scanner.cmo : parser.cmi
scanner.cmx : parser.cmx
semant.cmo : ast.cmo
semant.cmx : ast.cmx
