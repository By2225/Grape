OBJS = parser.cmo scanner.cmo

.PHONY : parser
parser : scanner.ml parser.ml

.PHONY : grape
grape : grape.cmo scanner.ml parser.ml semant.ml ast.ml
	ocamlopt -o grape scanner.ml parser.ml semant.ml ast.ml

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

.PHONY : clean
clean :
	rm -f parser.ml parser.mli scanner.ml *.cmo *.cmi

# GENERATED BY ./scripts/bootstrap.sh
ast.cmo :
ast.cmx :
codegen.cmo : sast.cmo ast.cmo
codegen.cmx : sast.cmx ast.cmx
grape.cmo : semant.cmo sast.cmo codegen.cmo ast.cmo
grape.cmx : semant.cmx sast.cmx codegen.cmx ast.cmx
sast.cmo : ast.cmo
sast.cmx : ast.cmx
semant.cmo : sast.cmo ast.cmo
semant.cmx : sast.cmx ast.cmx
